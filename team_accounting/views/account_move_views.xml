<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_form_inherit" model="ir.ui.view">
            <field name="name">account.move.common.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="after">
                    <button name="print_for_invoice_voucher" type="object" class="btn btn-danger"
                            string="Print Invoice Voucher"
                            attrs="{'invisible': ['|',('type', 'not in', 'out_invoice'),'&amp;',('type', 'not in', 'in_invoice'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_payable_voucher" type="object" class="btn btn-danger"
                            string="Print Payable Voucher"
                            attrs="{'invisible': ['|',('type', 'not in', 'in_invoice'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_credit_note_voucher" type="object" class="btn btn-danger"
                            string="Print Debit/Credit Voucher (With Fee)"
                            attrs="{'invisible': ['|',('type', 'not in', 'out_refund'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_journal_entry_voucher" type="object" class="btn btn-danger"
                            string="Print Payment Voucher (Journal Entry)"
                            attrs="{'invisible': ['|',('type', 'not in', 'entry'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_credit_note_voucher_v2" type="object" class="btn btn-info"
                            string="Print Debit/Credit Voucher (W/O Fee)"
                            attrs="{'invisible': ['|',('type', 'not in', 'out_refund'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_credit_note_voucher" type="object" class="btn btn-danger"
                            string="Print Debit/Credit Voucher (With Fee)"
                            attrs="{'invisible': ['|',('type', 'not in', 'out_invoice'),'&amp;',('type', 'not in', 'in_invoice'),('state', 'not in', 'posted')]}"/>
                    <button name="print_for_credit_note_voucher_v2" type="object" class="btn btn-info"
                            string="Print Debit/Credit Voucher (W/O Fee)"
                            attrs="{'invisible': ['|',('type', 'not in', 'out_invoice'),'&amp;',('type', 'not in', 'in_invoice'),('state', 'not in', 'posted')]}"/>


                    <!-- <button name="getting_query" type="object" string="Get Journal Payable"/> -->
                    <!--                    print_for_credit_note_voucher-->
                    <!--                    <button name="re_check_recalc_debit_credit" type="object" string="Button"/>-->
                </xpath>
                <xpath expr="//group[@id='header_right_group']" position="after">
                    <group>
                        <group>
                            <field name="debit_here" invisible="1"/>
                            <field name="debit_payable" invisible="1"/>
                            <field name="get_query_here" invisible="1"/>
                            <!--                            <field name="converting_percent" invisible="1"/>-->
                            <!--                            <field name="getting_forex_php" invisible="1"/>-->
                            <!--                            <field name="adding_usd_with_percent_here" invisible="1"/>-->
                            <field name="computing_forex_and_amm" invisible="1"/>
                            <field name="getting_total_of_debit_credit_var" invisible="1"/>
                            <field name="fetch_recheck_compute" invisible="1"/>
                            <!--                            <field name="amm_usd_var" invisible="1"/>-->
                            <!--                            <field name="deduct_value_var" invisible="1"/>-->
                        </group>
                        <!--                        attrs="{'invisible': [('type', 'not in', 'out_refund')]}"-->
                        <group invisible="1">
                            <field name="get_total_in_deb_cred_compute" invisible="1"/>
                            <field name="get_total_in_deb_cred" readonly="1"
                                   attrs="{'invisible': [('type', 'not in', 'in_invoice')]}"/>
                            <field name="type" invisible="1"/>
                            <field name="remove_monetary" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"/>
                            <field name="percentage" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"/>
                            <field name="computed_total" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"/>
                            <!--                            <field name="to_count_total_days" invisible="1"/>-->
                            <!--                            <field name="get_days" readonly="1" attrs="{'invisible': [('invoice_date_due', '=', 'True')]}"/>-->
                        </group>
                        <group invisible="1">
                            <field name="remove_monetary"
                                   attrs="{'invisible': ['|',('currency_name_here', 'not in', 'PHP') ,('type', 'not in', 'out_refund')]}"
                                   readonly="True" string="Total Amount in PHPâ‚±"/>
                            <field name="remove_monetary"
                                   attrs="{'invisible': ['|',('currency_name_here', 'not in', 'USD') ,('type', 'not in', 'out_refund')]}"
                                   readonly="True" string="Total Amount in USD$"/>
                            <field name="word_num" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   invisible="1"/>
                            <field name="word_num2" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   invisible="1"/>
                            <field name="word_move" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   readonly="True"/>
                            <field name="compute_total_usd" attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   string="Total Computation USD"/>
                            <field name="get_currency_name" readonly="1" invisible="True"/>
                            <field name="currency_name_here" readonly="1"
                                   attrs="{'invisible': [('type', 'not in', 'out_refund')]}"/>
                            <field name="word_for_journal_entries"
                                   attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   invisible="1"/>
                            <field name="word_for_journal_entries_val"
                                   attrs="{'invisible': [('type', 'not in', 'out_refund')]}"
                                   invisible="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>


        <record id="account_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Journal Items" create="false" edit="false">
                    <field name="date" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="journal_id" options='{"no_open":True}'/>
                    <field name="move_id" optional="show"/>
                    <field name="account_id" options="{'no_open': True}" groups="account.group_account_user"/>
                    <field name="partner_id" optional="show"/>
                    <field name="statement_id" invisible="1"/>
                    <field name="ref" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="analytic_account_id" groups="account.group_account_user" optional="show"/>
                    <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"
                           optional="hide"/>
                    <field name="tax_ids" widget="many2many_tags" width="0.5" optional="show"/>
                    <field name="debit" sum="Total Debit"/>
                    <field name="credit" sum="Total Credit"/>
                    <field name="amount_currency" groups="base.group_multi_currency" optional="hide"/>
                    <field name="always_set_currency_id" readonly="1" groups="base.group_multi_currency" optional="hide"
                           string="Original Currency"/>
                    <field name="tag_ids" widget="many2many_tags" width="0.5" optional="hide"/>
                    <field name="full_reconcile_id" optional="show"/>
                    <field name="reconcile_model_id" invisible="1"/>
                    <field name="reconciled" invisible="1"/>
                    <field name="date_maturity" optional="hide"/>
                    <field name="currency_id" readonly="1" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="parent_state" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="account_move_line_form" model="ir.ui.view">
            <field name="name">account.move.line.form</field>
            <field name="model">account.move.line</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <form string="Journal Item" create="false">
                    <sheet>
                        <group invisible="1">
                            <field name="company_id"/>
                            <field name="parent_state"/>
                            <field name="debit_data"/>
                            <field name="credit_data"/>
                            <field name="debit_data_payable"/>
                            <field name="credit_data_payable"/>
                            <field name="name"/>
                            <field name="partner_id"
                                   domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"
                                   readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_move_line_id_action" model="ir.actions.act_window">
            <field name="name">P and L</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by':'account_id'}</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>